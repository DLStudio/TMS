<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/bus_header"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="宽带办理" />

    <TextView
        android:id="@+id/bus_item_name_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="@dimen/bus_top_marginLeft"
        android:layout_marginTop="28dp"
        android:text="姓名：" />

    <EditText
        android:id="@+id/bus_item_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bus_item_name_txtv"
        android:layout_alignBottom="@+id/bus_item_name_txtv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bus_top_marginRight"
        android:layout_toRightOf="@+id/bus_item_name_txtv"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/bus_item_phone_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bus_item_name_txtv"
        android:layout_below="@+id/bus_item_name_edit"
        android:layout_marginTop="40dp"
        android:text="联系电话：" />

    <EditText
        android:id="@+id/bus_item_phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bus_item_phone_txtv"
        android:layout_alignBottom="@+id/bus_item_phone_txtv"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bus_item_phone_txtv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bus_top_marginRight"
        android:ems="10"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/bus_item_address_txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bus_item_phone_txtv"
        android:layout_below="@+id/bus_item_phone_edit"
        android:layout_marginTop="40dp"
        android:text="地址：" />

    <EditText
        android:id="@+id/bus_item_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bus_item_address_txtv"
        android:layout_alignBottom="@+id/bus_item_address_txtv"
        android:layout_toRightOf="@+id/bus_item_address_txtv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bus_top_marginRight"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:inputType="textPostalAddress" />

    <ListView
        android:id="@+id/bus_type_listv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_item_address_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" >
    </ListView>

    <Button
        android:id="@+id/bus_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bus_item_address_edit"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="确定" />

</RelativeLayout>
