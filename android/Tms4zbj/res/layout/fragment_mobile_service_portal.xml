<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/mobser_period_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="我的手机还在保修期内" />

    <TextView
        android:id="@+id/mobser_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobser_period_out"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="常见故障" />

    <TextView
        android:id="@+id/mobser_period_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobser_period_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="我的手机已过保修期" />

</RelativeLayout>
