<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/item_cs_content_phonemodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/item_cs_content_phone"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/item_cs_title_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_cs_content_phonemodel"
        android:layout_marginTop="20dp"
        android:text="售后电话：" />

    <TextView
        android:id="@+id/item_cs_content_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_cs_title_phone"
        android:layout_alignBottom="@+id/item_cs_title_phone"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/item_cs_title_phone"/>

    <TextView
        android:id="@+id/item_cs_title_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_cs_title_phone"
        android:layout_marginTop="20dp"
        android:text="售后地址：" />

    <TextView
        android:id="@+id/item_cs_content_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_cs_title_address"
        android:layout_alignBottom="@+id/item_cs_title_address"
        android:layout_alignLeft="@+id/item_cs_content_phone"
        android:layout_alignRight="@+id/item_cs_content_phone"/>

</RelativeLayout>
