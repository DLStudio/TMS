<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/po_common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lines="1"
        android:gravity="top|left"
        android:text="TextView" />

    <TextView
        android:id="@+id/po_common_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/po_common_title"
        android:layout_below="@+id/po_common_title"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="top|left"
        android:lines="3"
        android:text="TextView" />

    <TextView
        android:id="@+id/po_common_price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/po_common_desc"
        android:layout_below="@+id/po_common_desc"
        android:layout_marginTop="16dp"
        android:lines="1"
        android:text="1000~2000" />

    <TextView
        android:id="@+id/po_common_phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/po_common_price"
        android:layout_alignRight="@+id/po_common_desc"
        android:text="三星 gs5" />

</RelativeLayout>
